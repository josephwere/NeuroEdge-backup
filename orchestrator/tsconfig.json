{
  "compilerOptions": {
    /* Language & Output */
    "target": "ES2022",
    "module": "CommonJS",              // <-- CommonJS avoids ESM headaches on Windows/Linux
    "moduleResolution": "node",
    "strict": true,
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": "src",

    /* Paths / Aliases */
    "paths": {
      "@core/*": ["core/*"],
      "@agents/*": ["agents/*"],
      "@mesh/*": ["mesh/*"],
      "@swarm/*": ["swarm/*"],
      "@floating/*": ["floating/*"],
      "@floating-chat/*": ["floating_chat/*"],
      "@ml/*": ["ml/*"],
      "@bridge/*": ["bridge/*"],
      "@handlers/*": ["handlers/*"],
      "@security/*": ["security/*"],
      "@utils/*": ["utils/*"],
      "@contracts/*": ["contracts/*"],
      "@config/*": ["config/*"],
      "@services/*": ["services/*"],
      "@github/*": ["github/*"],
      "@context/*": ["context/*"],
      "@federation/*": ["federation/*"],
      "@stream/*": ["stream/*"],
      "@types/*": ["types/*"],
      "@server": ["server/index"]        // <-- map the main server file
    },

    /* Interop & Quality */
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
